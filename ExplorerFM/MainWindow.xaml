<Window x:Class="ExplorerFM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExplorerFM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Button Height="25" Width="100" Content="Initialize" Name="InitializeButton" Click="InitializeButton_Click"/>
        <ComboBox Width="200" Height="30" DisplayMemberPath="Name" Name="ConfederationsComboBox" />
        <ComboBox Width="200" Height="30" DisplayMemberPath="Name" Name="CountriesComboBox" />
        <ComboBox Width="200" Height="30" DisplayMemberPath="Name" Name="ClubsComboBox" />
        <ComboBox Width="200" Height="30" DisplayMemberPath="Name" Name="AttributesComboBox" />
        <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
            <ListBox Name="PlayersListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Path=Lastname}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </StackPanel>
</Window>
