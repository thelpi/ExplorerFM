<Window x:Class="ExplorerFM.Windows.BestPlayerFinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Best players finder"
        WindowStartupLocation="CenterScreen"
        Height="675" Width="1200">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ProgressBar Grid.Column="0" Grid.ColumnSpan="2" Height="25" Width="250" Visibility="Collapsed" Name="LoadPlayersProgressBar" />
        <Grid Grid.Column="0" Margin="0, 0, 10, 0" Name="CriteriaGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Sort and rating parameters" HorizontalAlignment="Center" />
            
            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Position:" />
            <ComboBox Grid.Row="1" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Name="PositionsComboBox" SelectionChanged="PositionsComboBox_SelectionChanged" />
            <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Side:" />
            <ComboBox Grid.Row="2" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Name="SidesComboBox" />
            <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Potential:" />
            <CheckBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Name="PotentialAbilityCheckBox" />
            
            <Label Grid.Row="4" Grid.ColumnSpan="2" Content="Search criteria" HorizontalAlignment="Center" />

            <Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Nationality:" />
            <ComboBox Grid.Row="5" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Name="NationalityComboBox" DisplayMemberPath="Name" SelectionChanged="NationalityComboBox_SelectionChanged" />
            <Label Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="No club:" />
            <CheckBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Name="NoClubContractCheckBox" Checked="NoClubContractCheckBox_Checked" Unchecked="NoClubContractCheckBox_Unchecked" />
            <Label Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Max value:" />
            <xctk:IntegerUpDown Grid.Row="7" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Name="ValueIntUpDown" Minimum="1" Maximum="100000000" ValueChanged="ValueIntUpDown_ValueChanged" />
            <Label Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Max rep.:" />
            <xctk:IntegerUpDown Grid.Row="8" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Name="ReputationIntUpDown" Minimum="1" Maximum="200" ValueChanged="ReputationIntUpDown_ValueChanged" />
            <Label Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Min/max age.:" />
            <xctk:RangeSlider Grid.Row="9" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Name="AgeSlider" Minimum="10" Maximum="50" LowerValue="20" HigherValue="40" HigherValueChanged="AgeSlider_HigherValueChanged" LowerValueChanged="AgeSlider_LowerValueChanged" RangeBackground="Beige" AutoToolTipPlacement="TopLeft" />
            <Label Grid.Row="10" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="E.U.:" />
            <CheckBox Grid.Row="10" Grid.Column="1" VerticalAlignment="Center" Name="EuropeanUnionCheckBox" Checked="EuropeanUnionCheckBox_Checked" Unchecked="EuropeanUnionCheckBox_Unchecked" />
            
            <!--<Button Grid.Row="11" Grid.Column="1" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" Width="75" Content="Search" Name="SearchPlayersButton" Click="SearchPlayersButton_Click" />-->
        </Grid>
        <ListView Grid.Column="1" Grid.RowSpan="6" Name="PlayersListView" AlternationCount="2" ItemContainerStyle="{StaticResource ItemContainerStyle}">
            <ListView.View>
                <GridView x:Name="PlayersGridView">
                    <!-- player info columns are added by code-behind -->
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Height="20" Width="20" Name="SelectPlayerButton" Click="SelectPlayerButton_Click">
                                    <Image Source="./../Resources/endturn.png" />
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Pos." DisplayMemberBinding="{Binding Path=PositionRate}" />
                    <GridViewColumn Header="Side" DisplayMemberBinding="{Binding Path=SideRate}" />
                    <GridViewColumn Header="Rate" DisplayMemberBinding="{Binding Path=Rate}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
